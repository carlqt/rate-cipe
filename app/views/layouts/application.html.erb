<!DOCTYPE html>
<html>
<head>
  <title>RecipeReader</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value|%>
	<div class="flash <%= key %>"><%= value %></div>
<% end %>


<% if user_signed_in? %>
	<%= link_to "Logout",  destroy_user_session_path, :method => :delete %>
<% else %>
	<%= link_to "Login", new_user_session_path %>
<% end %>

<nav>
	<%= link_to "Home", recipes_path %><br>
	<%#= link_to "comments", reviews_index_path %><br>
	<%= link_to "Add recipes", new_recipe_path %>
</nav>

<%= yield %>
<%= debug(params) if Rails.env.development? %>
</body>
</html>
